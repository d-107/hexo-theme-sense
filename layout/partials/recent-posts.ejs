
<% if (page.posts.length > 0) { %>
  <div class="recent-posts">
    <% page.posts.sort('date', -1).limit(10).each(function(post) { %>
      <div class="recent-post-item">
        <h1>
          <i class="iconfont new-article">&#xe6e3;</i>
          <span class="article-link" >
            <i class="iconfont articles-tag">&#xe633;</i>
            <a class="title-href" href="<%=config.root + post.path%>"><%=post.title%></a>
          </span>
          <% if (post.date) { %>
            <time class="post-time" datetime="<%=post.date.toJSON()%>">
              <%=date(post.date)%>
            </time>
          <% } %>
        </h1>

      </div>
    <% }); %>
  </div>
<% } %>
